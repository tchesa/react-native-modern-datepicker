{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext"],
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noResolve": false,
    "typeRoots": ["./@types"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "composite": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["playground/datepicker"]
  // "exclude": ["node_modules", "dist", "website"],
}
